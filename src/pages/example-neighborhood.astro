---
import Layout from '../layouts/Layout.astro'
import ReviewsList from '../components/ReviewsList.astro'

import ReviewsHeader from '../components/ReviewsHeader.astro'
import NeighborhoodHero from '../components/NeighborhoodHero.astro'
import RatingBarChart from '../components/RatingBarChart.astro'
---

<Layout title="Seoul Survey Cafe">
	<NeighborhoodHero />
	<div class="divider"></div>
	<div class="container mx-auto flex flex-row">
		<div class="left-panel basis-1/3">
			<ReviewsHeader />
			<RatingBarChart />
		</div>

		<div class="right-panel basis-2/3">
			<div class="flex">
				<div class="rounded-lg text-gray-900">
					<ReviewsList />
				</div>
			</div>
		</div>
	</div>
</Layout>

<style>
	.divider {
		height: 60px;
	}
</style>
